// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
		"out": false // set this to true to hide the "out" folder with the compiled JS files
	},
	"search.exclude": {
		"out": true // set this to false to include "out" folder in search results
	},
	"typescript.tsdk": "./node_modules/typescript/lib", // we want to use the TS server from our node_modules folder to control its version
	"editor.rulers": [80],
	"workbench.editor.showTabs": true,
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
	"editor.useTabStops": false,
	// "terminal.integrated.shell.windows": "C: && cd C:/cygwin64/bin && C:/cygwin64/bin/bash", // "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell_ise.exe"
	// "terminal.integrated.shell.windows": "C:/cygwin64/bin/bash.exe",
	"terminal.integrated.shell.windows": "C:/Windows/System32/WindowsPowerShell/v1.0/powershell.exe",
	// "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell_ise.exe",
	"terminal.integrated.shellArgs.windows": ["--login","-i"],
  "files.eol": "\n"
}